{# Modal content for association link (associate/dissociate) #}
{# Expects: diffs #}
<div class="row">
    <div class="col-5">
        <h6 class="text-muted">Source</h6>
        <dl class="mb-0">
            <dt>Entity</dt>
            <dd><code>{{ diffs.source.class|default('')|split('\\')|last }}</code></dd>
            <dt>ID</dt>
            <dd><code>{{ diffs.source.id|default('?') }}</code></dd>
            <dt>Label</dt>
            <dd>{{ diffs.source.label|default('N/A') }}</dd>
            {% if diffs.source.field is defined %}
                <dt>Field</dt>
                <dd><code>{{ diffs.source.field }}</code></dd>
            {% endif %}
        </dl>
    </div>
    <div class="col-2 d-flex align-items-center justify-content-center">
        <span class="material-icons" style="font-size: 2rem;">swap_horiz</span>
    </div>
    <div class="col-5">
        <h6 class="text-muted">Target</h6>
        <dl class="mb-0">
            <dt>Entity</dt>
            <dd><code>{{ diffs.target.class|default('')|split('\\')|last }}</code></dd>
            <dt>ID</dt>
            <dd><code>{{ diffs.target.id|default('?') }}</code></dd>
            <dt>Label</dt>
            <dd>{{ diffs.target.label|default('N/A') }}</dd>
            {% if diffs.target.field is defined %}
                <dt>Field</dt>
                <dd><code>{{ diffs.target.field }}</code></dd>
            {% endif %}
        </dl>
    </div>
</div>
