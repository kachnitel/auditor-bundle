{# Audit entry detail view for admin bundle #}
{# Usage: include '@KachnitelAuditor/Admin/Audit/detail.html.twig' with {entry: entry, dataSource: dataSource} #}

{% set diffsWithMeta = entry.getDiffs(true) %}
{% set requestId = diffsWithMeta['@context']['request_id']|default(null) %}
{% set hasTimelineSupport = dataSource is defined and dataSource.hasTimelineSupport() %}

{# Macro to extract short class name from FQCN #}
{% macro shortClassName(fqcn) %}
    {{- fqcn|split('\\')|last -}}
{% endmacro %}

{# Macro to get action badge color #}
{% macro actionBadge(type) %}
    {% set colors = {
        'insert': 'success',
        'update': 'primary',
        'remove': 'danger',
        'associate': 'info',
        'dissociate': 'warning',
        'event': 'secondary'
    } %}
    <span class="badge bg-{{ colors[type]|default('secondary') }}">{{ type }}</span>
{% endmacro %}

{% block content %}
<div class="audit-detail-view">
    {# Tab Navigation #}
    <ul class="nav nav-tabs mb-4" id="auditDetailTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details-pane" type="button" role="tab" aria-controls="details-pane" aria-selected="true">
                Details
            </button>
        </li>
        {% if hasTimelineSupport %}
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="timeline-tab" data-bs-toggle="tab" data-bs-target="#timeline-pane" type="button" role="tab" aria-controls="timeline-pane" aria-selected="false">
                    Timeline (±5 min)
                </button>
            </li>
        {% endif %}
    </ul>

    {# Tab Content #}
    <div class="tab-content" id="auditDetailTabContent">
        {# Details Tab #}
        <div class="tab-pane fade show active" id="details-pane" role="tabpanel" aria-labelledby="details-tab">

    {# Header with basic info #}
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="text-muted">Type</h6>
                    <p>
                        <span class="badge bg-info">{{ entry.type }}</span>
                    </p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Created At</h6>
                    <p>{{ entry.createdAt|date('Y-m-d H:i:s') }}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h6 class="text-muted">Entity ID</h6>
                    <p><code>{{ entry.objectId }}</code></p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">User</h6>
                    <p>{{ entry.username ?? 'System' }}</p>
                </div>
            </div>
            {% if entry.transactionHash %}
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted">Transaction</h6>
                        <p><code>{{ entry.transactionHash }}</code></p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">IP Address</h6>
                        <p>{{ entry.ip ?? '-' }}</p>
                    </div>
                </div>
            {% endif %}
            {% if requestId %}
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="text-muted">Request ID</h6>
                        <p>
                            <code>{{ requestId }}</code>
                            {% if hasTimelineSupport %}
                                <a href="?columnFilters[request_id]={{ requestId|url_encode }}" class="btn btn-outline-info btn-sm ms-2" title="Show all changes from this HTTP request">
                                    View Related Audits
                                </a>
                            {% endif %}
                        </p>
                    </div>
                </div>
            {% endif %}
            {% if hasTimelineSupport and entry.getUsername() and entry.getCreatedAt() %}
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="text-muted">User Timeline</h6>
                        <p>
                            {% set fromTime = entry.getCreatedAt()|date_modify('-5 minutes')|date('Y-m-d H:i:s') %}
                            {% set toTime = entry.getCreatedAt()|date_modify('+5 minutes')|date('Y-m-d H:i:s') %}
                            <a href="{{ path('kachnitel_auditor_timeline', {
                                   user: entry.getUsername(),
                                   from: fromTime,
                                   to: toTime,
                                   anchor_entity: dataSource.getEntityClass(),
                                   anchor_id: entry.getId()
                               }) }}" class="btn btn-outline-primary btn-sm" title="Show all changes by {{ entry.getUsername() }} within ±5 minutes">
                                <span class="material-icons align-middle" style="font-size: 1rem;">schedule</span>
                                View {{ entry.getUsername() }}'s activity (±5 min)
                            </a>
                        </p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    {# Changes accordion #}
    {% set diffs = entry.getDiffs() %}
    {% if diffs is not empty %}
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Changes</h5>
            </div>
            <div class="card-body">
                <div class="accordion" id="changesAccordion">
                    {% set changeIndex = 0 %}
                    {% for key, value in diffs %}
                        {% if key not in ['@source', '@context'] and value is iterable %}
                            {% set changeIndex = changeIndex + 1 %}
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading{{ changeIndex }}">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ changeIndex }}" aria-expanded="false" aria-controls="collapse{{ changeIndex }}">
                                        <strong>{{ key }}</strong>
                                        <div class="ms-auto">
                                            {% if value.old is defined and value.new is defined %}
                                                <span class="badge bg-secondary ms-2">
                                                    {{ value.old|json_encode|slice(0, 20) }}
                                                </span>
                                                <span class="mx-2">→</span>
                                                <span class="badge bg-secondary">
                                                    {{ value.new|json_encode|slice(0, 20) }}
                                                </span>
                                            {% elseif value.removed is defined and value.added is defined %}
                                                <span class="badge bg-danger ms-2">- {{ value.removed|length }}</span>
                                                <span class="badge bg-success ms-2">+ {{ value.added|length }}</span>
                                            {% endif %}
                                        </div>
                                    </button>
                                </h2>
                                <div id="collapse{{ changeIndex }}" class="accordion-collapse collapse" aria-labelledby="heading{{ changeIndex }}" data-bs-parent="#changesAccordion">
                                    <div class="accordion-body">
                                        {% if value.old is defined and value.new is defined %}
                                            <div class="row">
                                                <div class="col-6">
                                                    <h6>Old Value</h6>
                                                    <pre class="bg-light p-2 rounded"><code>{{ value.old|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                                </div>
                                                <div class="col-6">
                                                    <h6>New Value</h6>
                                                    <pre class="bg-light p-2 rounded"><code>{{ value.new|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                                </div>
                                            </div>
                                        {% elseif value.removed is defined and value.added is defined %}
                                            <div class="row">
                                                <div class="col-6">
                                                    <h6>Removed ({{ value.removed|length }})</h6>
                                                    <ul class="list-unstyled">
                                                        {% for item in value.removed %}
                                                            <li><code>{{ item|json_encode }}</code></li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                                <div class="col-6">
                                                    <h6>Added ({{ value.added|length }})</h6>
                                                    <ul class="list-unstyled">
                                                        {% for item in value.added %}
                                                            <li><code>{{ item|json_encode }}</code></li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            </div>
                                        {% else %}
                                            <div class="row">
                                                <div class="col-12">
                                                    <pre class="bg-light p-2 rounded"><code>{{ value|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

        </div>{# End Details Tab #}

        {# Timeline Tab #}
        {% if hasTimelineSupport %}
            <div class="tab-pane fade" id="timeline-pane" role="tabpanel" aria-labelledby="timeline-tab">
                {% set timelineData = dataSource.findUserTimeline(entry, 5, true) %}
                {% set currentEntryId = entry.getId() %}

                {# Flatten all entries into a single array with entity info #}
                {% set allEntries = [] %}
                {% for entityClass, entries in timelineData %}
                    {% for timelineEntry in entries %}
                        {% set allEntries = allEntries|merge([{
                            'entityClass': entityClass,
                            'entry': timelineEntry
                        }]) %}
                    {% endfor %}
                {% endfor %}

                {# Sort by created_at ascending #}
                {% set sortedEntries = allEntries|sort((a, b) => a.entry.getCreatedAt() <=> b.entry.getCreatedAt()) %}

                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <span class="material-icons align-middle me-2">schedule</span>
                            Activity Timeline
                        </h5>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-secondary">{{ sortedEntries|length }} entries</span>
                            {% if entry.getUsername() and entry.getCreatedAt() %}
                                {% set fromTime = entry.getCreatedAt()|date_modify('-5 minutes')|date('Y-m-d H:i:s') %}
                                {% set toTime = entry.getCreatedAt()|date_modify('+5 minutes')|date('Y-m-d H:i:s') %}
                                <a href="{{ path('kachnitel_auditor_timeline', {
                                       user: entry.getUsername(),
                                       from: fromTime,
                                       to: toTime,
                                       anchor_entity: dataSource.getEntityClass(),
                                       anchor_id: entry.getId()
                                   }) }}" class="btn btn-outline-primary btn-sm" title="Open full timeline view">
                                    <span class="material-icons align-middle" style="font-size: 1rem;">open_in_new</span>
                                    Full View
                                </a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-body p-0">
                        {% if sortedEntries|length > 0 %}
                            <div class="list-group list-group-flush">
                                {% for item in sortedEntries %}
                                    {% set isCurrentEntry = item.entry.getId() == currentEntryId and item.entityClass == dataSource.getEntityClass() %}
                                    <div class="list-group-item {{ isCurrentEntry ? 'list-group-item-warning' : '' }}">
                                        <div class="d-flex w-100 justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center mb-1">
                                                    {# Entity type badge #}
                                                    <span class="badge bg-dark me-2" title="{{ item.entityClass }}">
                                                        {{ item.entityClass|split('\\')|last }}
                                                    </span>

                                                    {# Action badge #}
                                                    {{ _self.actionBadge(item.entry.getType()) }}

                                                    {# Object ID #}
                                                    <code class="ms-2">ID: {{ item.entry.getObjectId() }}</code>

                                                    {% if isCurrentEntry %}
                                                        <span class="badge bg-warning text-dark ms-2">Current</span>
                                                    {% endif %}
                                                </div>

                                                <div class="d-flex align-items-center text-muted small">
                                                    {# Timestamp #}
                                                    <span class="me-3">
                                                        <span class="material-icons align-middle" style="font-size: 1rem;">access_time</span>
                                                        {{ item.entry.getCreatedAt()|date('Y-m-d H:i:s') }}
                                                    </span>

                                                    {# User #}
                                                    <span>
                                                        <span class="material-icons align-middle" style="font-size: 1rem;">person</span>
                                                        {% if item.entry.getUsername() %}
                                                            {{ item.entry.getUsername() }}
                                                        {% else %}
                                                            <span class="badge bg-secondary">System</span>
                                                        {% endif %}
                                                    </span>
                                                </div>

                                                {# Changes preview #}
                                                {% set previewDiffs = item.entry.getDiffs() %}
                                                {% if previewDiffs is not empty %}
                                                    <div class="mt-1 small text-muted">
                                                        {% set fieldCount = 0 %}
                                                        {% for key, value in previewDiffs %}
                                                            {% if key not in ['@source', '@context'] %}
                                                                {% set fieldCount = fieldCount + 1 %}
                                                            {% endif %}
                                                        {% endfor %}
                                                        <span class="fst-italic">{{ fieldCount }} field(s) changed</span>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center text-muted py-4">
                                <span class="material-icons" style="font-size: 3rem;">history</span>
                                <p class="mt-2">No related activity found within ±5 minutes</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="mt-3 text-muted small">
                    <span class="material-icons align-middle" style="font-size: 1rem;">info</span>
                    Showing all audit entries across all entity types within ±5 minutes of this entry, including system actions.
                </div>
            </div>
        {% endif %}

    </div>{# End Tab Content #}
</div>

<style>
.audit-detail-view .accordion-button {
    padding: 0.75rem 1rem;
}

.audit-detail-view .accordion-body {
    padding: 1.5rem;
}

.audit-detail-view pre {
    max-height: 300px;
    overflow-y: auto;
    margin-bottom: 0;
}

.audit-detail-view .badge {
    font-size: 0.85rem;
    padding: 0.35em 0.65em;
}
</style>
{% endblock %}
